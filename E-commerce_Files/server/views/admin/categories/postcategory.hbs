



<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    {{> sidebar }}
    <!-- End of Sidebar -->


    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">


        <!-- Topbar -->
         {{> navigation }}
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800">Post Category page</h1>

        </div>
        <!-- /.container-fluid -->

        <div class="row">
            <div class="col ">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Category of Products</h3>
                    </div>
                    <div class="card-body">
                        <form action="/admin/postcategory" method="post" enctype="multipart/form-data">

                          <div class="form-group">
                                <input type="number" name="category_id" placeholder="category id" class="form-control">
                          </div>

                          <div class="form-group">
                                <input type="text" name="category" placeholder="category" class="form-control">
                          </div>

                           <div class="form-group">
                                <input type="text" name="subcategory1" placeholder="Subcategory1" class="form-control">
                          </div>

                          <div class="form-group">
                                <input type="text" name="subcategory2" placeholder="Subcategory2" class="form-control">
                          </div>

                          <div class="form-group">
                                <input type="text" name="subcategory3" placeholder="Subcategory3" class="form-control" min="0" step="any">
                          </div>

                            <div class="form-group">
                                <input type="text" name="type" placeholder="Type" class="form-control">
                          </div>

                    
                            <div class="form-group">
                                <input type="text" name="specifict" placeholder="Specifict" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="popular" placeholder="Popular" class="form-control">
                            </div>

                          
                           <div class="form-group">

                                <label>Active</label> <input type="checkbox" name="active" placeholder="Active" />
                          </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block">
                                    Go
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  

  


</body>

